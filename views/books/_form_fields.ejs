<div>
  <label for="title">Title</label>
  <input type="text" id="title" name="title" value="<%= book.title %>" />
</div>
<div>
  <label for="author">Author</label>
  <select name="author" id="author">
    <% authors.forEach(author =>{ %> <% if(author.id === book.author ) {%>
    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
    <% }else{ %>
    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } %> <% }) %>
  </select>
</div>
<div>
  <label for="publishDate">Publish Date</label>
  <input type="date" id="publishDate" name="publishDate"
    value="<%= book.publishDate == null ? '': book.publishDate.toISOString().split('T')[0] %>" />
</div>
<div>
  <label for="pageCount">Page Count</label>
  <input type="number" id="pageCount" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>
<div>
  <label for="cover">Cover Image</label>
  <input type="file" id="cover" name="cover">
</div>
<div>
  <label for="description">Description</label>
  <textarea id="description" name="description"><%= book.description %></textarea>
</div>